<Page x:Class="Sudoku_WPF.InstructionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="InstructionPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Frame x:Name="InstructionFrame" NavigationUIVisibility="Hidden" Grid.Row="0" />

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button Style="{StaticResource RoundedButtonStyle}" x:Name="BackButton" Height="40" Width="60" Content="Back" Click="BackButton_Click" Margin="200, 50, 200, 50"/>
            <Button Style="{StaticResource RoundedButtonStyle}" x:Name="NextButton" Height="40" Width="60" Content="Next" Click="NextButton_Click" Margin="200, 50, 200, 50"/>

        </StackPanel>

    </Grid>
</Page>
